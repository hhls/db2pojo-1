{
    // 项目名称(package包名)
	"project" 			: "mars",
	"alias" 			: "littlemars",
	"author" 			: "xuyl",

    // 数据库信息. 目前仅支持 mysql 或 oracle
	"dbConfig" : {
		"driverClass" 	: "org.gjt.mm.mysql.Driver",
		"username" 		: "root",
		"password" 		: "xu3352",
		"dbName" 		: "mars",
		"url" 			: "jdbc:mysql://localhost:3306/mars?useUnicode=true&characterEncoding=UTF-8"
	},

    // 表明截断前缀, 如: t_test_table 生成 POJO 文件名为:TestTable
	"ignorePrefix" : "t_",

    // 多个表可以放到同一个组的目录下面, 否则以表名为模块创建对应的文件夹
	"groups" : [{
			"name" 	 : "course",
			"prefix" : "course,question,quiz"
		}, {
			"name" 	 : "system",
			"prefix" : "sys"
		}, {
			"name" 	 : "users",
			"prefix" : "user"
    }],

    // 自定义模板根目录
	"templateDir" : "resources/template/ssm_cms/",

    // 每个自定义模板的 路径和文件名 生成规则
	"mappings" : [{
			"template"	:	"action.ftl",
			"dir"		:	"com/${project}/web/${alias}",
			"rpadding"	:	"Action"
		}, {
			"template"	:	"pojo.ftl",
			"dir"		:	"com/${project}/pojo/${alias}"
		}, {
			"template"	:	"page.ftl",
			"dir"		:	"com/${project}/page",
			"rpadding"	:	"Page"
		}, {
			"template"	:	"service.ftl",
			"dir"		:	"com/${project}/service",
			"rpadding"	:	"Service"
		}, {
			"template"	:	"service_impl.ftl",
			"dir"		:	"com/${project}/service/impl",
			"rpadding"	:	"ServiceImpl"
		}, {
			"template"	:	"dao.ftl",
			"dir"		:	"com/${project}/dao",
			"rpadding"	:	"Dao"
		}, {
			"template"	:	"dao_impl.ftl",
			"dir"		:	"com/${project}/dao/impl",
			"rpadding"	:	"DaoImpl"
		}, {
			"template"	:	"mybatis.ftl",
			"dir"		:	"sqlmap",
            "rpadding"	:	"Dao",
			"suffix"	:	"xml"
		}]
}